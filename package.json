{
  "name": "simplest-ytdl-ui",
  "version": "1.0.0",
  "description": "A simple YouTube download UI with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "dist": "npm run build"
  },
  "engines": {
    "node": "22.18.0"
  },
  "keywords": [
    "electron",
    "youtube",
    "download"
  ],
  "author": "",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "^33.3.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.simplest-ytdl-ui.app",
    "productName": "Simplest YTDL UI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "style.css",
      "ytdl/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "ytdl",
        "to": "ytdl"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    }
  }
}
